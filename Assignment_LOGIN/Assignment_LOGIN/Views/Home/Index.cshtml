
@{
    ViewBag.Title = "Index";
}
@{
    if (Session["userno"] != null)
    {
        <ul>
            <li style="float:right;font-size:20px;color:aliceblue;padding: 0px 18px;">@Session["username"]</li>
        </ul>

    }
}



<style>
    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #B33B00;
    }

    li {
        float: left;
    }

        li a {
            display: block;
            color: white;
            text-align: center;
            padding: 16px 18px;
            text-decoration: solid;
            font-size: 19px;
        }

            li a:hover {
                background-color: navajowhite;
            }

    .img {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 100%;
    }

    .center {
        margin: auto;
        width: 50%;
        border: 1px solid orange;
        padding: 10px;
    }



    footer {
        text-align: center;
        padding: 3px;
        color: black;
    }
</style>
<body>
    <ul>
        <li>@Html.ActionLink("Home", "Index")</li>
        <li>@Html.ActionLink("Order", "../Order/Order")</li>
        <li>@Html.ActionLink("Cart", "../Order/Cart")</li>

        <li>@Html.ActionLink("Contact Us", "Contact")</li>


    </ul>
    <br>


    <img class="img" src="~/Content/Images/banner.jpg" alt="Halloween" />


    <div class="center">
        <p style="font-size:24px">Welcome to the Halloween store</p>
        <p>Thank you for visiting us this beautiful sunday</p>

    </div>
    <br>
    <br>


    <footer>
        <p>
            Where every day is Halloween!
        </p>
    </footer>

</body>

